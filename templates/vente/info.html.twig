{% extends 'base.html.twig' %}
{% block title %}Annonce : {{ infoSup.marque }} {{ infoSup.modele }}{% endblock %}
{% block body %}
<div class="annonce-title" style="background-image: url({{ infoSup.img }});">
    <div class="container">
        <h1>{{ infoSup.marque }}</h1>
        <h2>{{ infoSup.modele }}</h2>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-8 mb-3">
            
            <div class="row">
                
                <div class="col-md-5 mb-3">
                    <div class="info">
                        <h3>KM :</h3>
                        <h3>Prix :</h3>
                    </div>
                        <p class="mt-5">Nombre de propiétaire :</p> 
                        <p class="mt-5">Cylindrée :</p>
                        <p>Puissance :</p>
                        <p>Carburant :</p>
                        <p>Année de mise en circulation :</p>
                        <p>Type de transmission :</p>
                </div>
                
                <div class="col-md-6 mb-3 text-right">
                    <div class="info">
                        <h3>{{ infoSup.km | number_format(0, '',' ') }} KM</h3>
                        <h3>{{ infoSup.prix | number_format(0, '',' ') | nl2br}} €</h3>
                    </div>
                        <p class="mt-5">{{ infoSup.proprio }}</p> 
                        <p class="mt-5">{{ infoSup.cylindree }} cm³</p>
                        <p>{{ infoSup.puissance }} ch</p>
                        <p>{{ infoSup.carburant }}</p>
                        <p>{{ infoSup.annee }}</p>
                        <p>{{ infoSup.transmission }}</p>
                </div>
            </div>


            <div id="carouselExampleCaptions" class="carousel slide col-11" data-ride="carousel">
                <ol class="carousel-indicators">
                    {% for image in infoSup.img %}
                        <li data-target="#carouselExampleCaptions" data-slide-to="{{ loop.index0 }}" {% if loop.first %} class="active" {% endif %}></li>    
                    {% endfor %}
                </ol>
                <div class="carousel-inner">
                    {% for image in infoSup.img %}
                        <div class="carousel-item {% if loop.first %}active{% endif %}">
                            <img src="{{ image.url }}" class="d-block w-100" alt="image de {{ infoSup.marque }}">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>{{ infoSup.marque }}</h5>
                                <p>{{ image.caption }}</p>
                            </div>
                        </div>
                    {% endfor %}
                  
                  
                </div>
                <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <a class="btn btn-success btn-lg mr-5" href="#" role="button">Tester notre voiture</a> 
            <a class="btn btn-danger btn-lg" href="#" role="button">Acheter</a> 
        </div>  

        <div class="col">
            <div class="row mb-3">
            
                <div class="description col-12 mb-3">
                    <H4 class="mb-3">Description :</H4>
                    {{ infoSup.description | raw | nl2br}}
                </div>   
                <div class="option col-12 mt-3">    
                    <h4 class="mb-3">Option :</h4>
                    {{ infoSup.opt | raw | nl2br}}
                </div>
            </div>
        </div> 

        
      
    </div>
</div> 
{% endblock %}
